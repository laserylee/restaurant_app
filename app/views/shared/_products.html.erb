<% @array = allCategory(Item) %>



  <div class="row">

    <div class="col-md-10 col-sm-7">
    <% @array.each do |f| %>
      <div class="headertitle" style="padding-top:100px;font-size:4em;" id="<%= f %>"><%= f %></div>
      <div class="jumbotron flex-column category-card">
        <div class="card-group flex-row pb-3">
        <% @products = Item.where(category:f) %>
        <% @products.each_with_index do |k,i| %>
          <div class="card" style="max-width: 210px;">
            <% if k.picture? %>
              <%= image_tag(k.picture.url, size:"210", alt:"#{k}")%>
            <% else %>
              <%= image_tag("noo.png", class:"card-img-top",alt:"#{k}") %>
            <% end %>
            <div class="card-body">
              <p class="card-text mb-1"><b> <%= k.name %></b> </p>
              <p class="card-text"> <%= k.description.to_s %> </p>
            </div>
            <div class="card-footer pt-0">
              <%= form_for order_item, remote: true do |f| %>
      					<p class="text-right">Unit Price: <span style="color: green"><%= sprintf("RM%.2f", k.price) %></span></p>
        					<div class="input-group">
          					<%= f.number_field :quantity, value: 1, class: "form-control", min: 1 %>
          					<div class="input-group-btn">
            					<%= f.hidden_field :item_id, value: k.id %>
            					<%= f.submit "Add to Cart", class: "btn btn-primary" %>
          				</div>
        				</div>
      				<% end %>
            </div>
          </div>
          <% if (i+1)%5 == 0 %>
            </div><div class="card-group flex-row">
          <% end %>
        <% end %>
        </div>
      </div>
    <% end %>
  </div>

  <div class="col-md-2 col-sm-5" style="background-color: #777777;">
  <nav id ="navcustomer" class="navbar navbar-light  navbar-expand bg-light rounded sticky-top">
    <ul class="navbar-nav flex-column">
      <% @array.each do |f| %>
        <li class="nav-item rounded">
          <a class="nav-link" href="#<%= f %>"><%= f %></a>
        </li>
      <% end %>
    <p id="cart-text"><%= render 'layouts/cart_text' %></p>
    </ul>
  </nav>
  </div>

  </div>

<!-- Modal of cart -->
<div class="modal fade" id="itemModal" tabindex="-1" role="dialog" aria-labelledby="itemModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Add to cart</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        ...
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Save changes</button>
      </div>
    </div>
  </div>
</div>
