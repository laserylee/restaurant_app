<% @target_name = locals[:target_name]%>
<% @order_target = locals[:order_target] %>
<div class="headertitle pt-5"><%= @target_name %></div>

<div class="col-md-12 offset-md-0 bd-dark">
  <table class="table table-hover table-bordered", style="font-family: Arial;">
    <thead>
      <tr class="table-primary">
        <th>Order Id</th>
        <th>Id</th>
        <th>Items</th>
        <th>Total</th>
        <th>Pickup Time</th>
        <th>Updated At</th>
        <th>Status</th>
        <th>Time Left</th>
      </tr>
      </thead>
  <% unless @order_target.nil? %>
  <% @order_target.each do |f| %>
    <tr>
      <th><%= sprintf("%010d",f.id) %></th>
      <th><%= f.user_id %></th>
      <th class="col-3"><ul><% f.order_items.each do |k| %><% unless k.item.nil? %><li><%= k.item.name %> (<%= k.quantity %>) </li><% else %><li style="color:red;">inactive item</li> <% end %><% end %></ul></th>
      <th><%= f.subtotal %></th>
      <th><%= f.pickup_time.strftime('%d %^b %H:%M')   %></th>
      <th><%= f.updated_at.strftime('%d %^b %H:%M')  %></th>
      <th><%= f.order_status.name %></th>
      <th><%= time_diff(f.pickup_time, Time.zone.now) %></th>
    </tr>
  <% end %>
<% end %>
  </table>
</div>
