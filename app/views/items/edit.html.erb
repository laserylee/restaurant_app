<% provide(:title, 'Edit item') %>

<div class="row">
  <div class="col-md-6 offset-md-3">
    <%= image_tag @item.picture.url, size:"400x400", class:"logo mb-3 mt-3" if @item.picture?%>
    <%= form_for(@item) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <%= f.label :name %>
      <%= f.text_field :name, class:'form-control', placeholder:"#{@item.name}"%>

      <%= f.label :description %>
      <%= f.text_area :description, class:'form-control', placeholder:"#{@item.description}"%>

      <%= f.label :category %>
      <%= f.text_field :category, class:'form-control', autocomplete:"on", placeholder:"#{@item.category}"%>

      <%= f.label :price %>
      <%= f.number_field :price, class:'form-control', step:'0.01', placeholder:"#{@item.price}"%>

      <%= f.label :active %>
      <%= f.check_box :active %>
      
      <span class="picture">
        <%= f.file_field :picture %>
      </span>

      <%= f.submit "Update item", class:"btn btn-primary" %>

    <% end %>
  </div>
</div>
