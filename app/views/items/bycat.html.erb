<% provide(:title, "Items(Category)" ) %>
<% @products = Item.all %>

<div class="headertitle pt-5" id="byCat">Item List By Category</div>
<div class="col-md-10 offset-md-1">
<% @array = allCategory(Item) %>
<table class="table table-bordered">
  <thead>
    <tr>
    <th>Id</th>
    <th>Name</th>
    <th>Description</th>
    <th>Category</th>
    <th>Picture</th>
    <th>Price</th>
  </thead>
  <% @array.each do |k| %>
  <% @products = Item.where(category:k) %>
  <% @products.each do |f| %>
    <tr>
    <th><%= f.id %></th>
    <th><%= f.name %></th>
    <th><%= f.description %></th>
    <th><%= f.category %></th>
    <th><%= f.picture %></th>
    <th><%= f.price %></th>
    </tr>
  <% end %>
  <% end %>
</table>
</div>

