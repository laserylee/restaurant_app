<% provide(:title, "Items(Id)" ) %>
<% @products = Item.all %>
<% @array = allCategory(Item) %>
<% @colors = ["secondary","success","danger","warning","light","primary"] %>
<% #@array.each_with_index do |k,i| %>
  <% #@colors[i%7] %>
<% #end %>

<div class="headertitle pt-5" id="byId">Item List By ID</div>
<div class="center bg-light"><%= link_to "New Item", new_item_path, class:"btn btn-info mt-2 mb-3" %></div>
<div class="col-md-12 offset-md-0 bg-light">
<table class="table table-hover table-bordered", style="font-family: Arial;">
  <thead>
    <tr class="table-primary">
    <th>Id</th>
    <th>Name</th>
    <th>Description</th>
    <th>Category</th>
    <th>Picture</th>
    <th>Price</th>
    <th>Edit</th>
    <th>Del</th>
  </thead>
  <tbody>
  <% @products.each do |f| %>
    <tr class="table-<%= @colors[@array.index("#{f.category}")%6] %>">
    <td><%= f.id %></td>
    <td style="color:<% if f.active %>#000000<%else%>#ff0000<%end%>;"><b><%= f.name %></b></td>
    <td><%= f.description %></td>
    <td><%= f.category %></td>
    <td><%= image_tag f.picture.url, size:"100x100", class:"logo" if f.picture?%></td>
    <td><%= f.price %></td>
    <td><%= link_to "Edit", edit_item_path(f)%></td>
    <td><%= link_to "Del", f , method: :delete, data: { confirm: "Are you sure to delete #{f.name}?" } %></td>
    </tr>
  <% end %>
  </tbody>
</table>
</div>
