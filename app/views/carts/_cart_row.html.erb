
      <%= form_for order_item, remote: true, :html => {:class => 'form-inline' } do |f| %>
        <p class="col-md-2 col-sm-5"><%= item.name %></p>
        <p class="col-md-2 col-sm-4">Unit Price: <span style="color: green"><%= sprintf("RM%.2f", order_item.unit_price) %></span></p>
        <%= f.number_field :quantity, value: order_item.quantity.to_i, class: "col-1 col-sm-2", min: 1 %>
        <%= f.hidden_field :item_id, value: item.id %>
          <%= f.submit "Update Quantity", class: "btn-primary pt-0 pb-0 col-md-2 ml-3 mr-3" %>
          <%= link_to "Delete", order_item, { data: { confirm: "Are you sure you wish to delete the item '#{order_item.item.name}' from your cart?" }, method: :delete, remote: true, class: "btn-danger pt-0 pb-0 col-md-1 ml-3 mr-3" } %>
        <p class="col-md-2 col-sm-4">Total Price: <span style="color: green"><%= sprintf("RM%.2f", order_item.total_price) %></span></p>
      <% end %>
